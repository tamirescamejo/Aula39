<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margem_16">

    <ImageView
        android:layout_width="@dimen/altura_125"
        android:layout_height="@dimen/largura_125"
        android:layout_marginBottom="100dp"
        android:src="@drawable/carrinho"
        app:layout_constraintBottom_toTopOf="@+id/tv_totalCarrinho"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.822" />

        <TextView
        android:id="@+id/tv_totalCarrinho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margem_76"
        android:text="@string/mensagem_descricao"
        android:textSize="@dimen/fonte_16"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonRefazerCompra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

        <Button
        android:id="@+id/buttonRefazerCompra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margem_140"
        android:text="Refazer a compra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>